        <Button x:Name="btn3" Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="115,76,0,0" Height="40" FontSize="24" FontFamily="Consolas" Click="BtnNum_Click"/>
        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="25,121,0,0" Height="40" FontSize="24" FontFamily="Consolas" Click="BtnNum_Click"/>
        <Button x:Name="btn5" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="70,121,0,0" Height="40" FontSize="24" FontFamily="Consolas" Click="BtnNum_Click"/>
        <Button x:Name="btn6" Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="115,121,0,0" Height="40" FontSize="24" FontFamily="Consolas" Click="BtnNum_Click"/>

    </Grid>
</Window>
